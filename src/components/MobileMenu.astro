<div class="mobile-menu">
    <ul>
        <li class="box">
            <a href="/">Accueil</a>
            <img src="home.svg" alt="Icone Accueil" >
        </li>
        <li class="box">
            <a href="contact">Contact</a>
            <img src="/contact.svg" alt="Icone Contact">
        </li>
    </ul>
</div>

<style>

    .mobile-menu{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 98;
        opacity: 0;
        transform: translateY(-100%);
        background-color: var(--background);
        color: var(--textcolor);
        transition: 0.3s;
        padding-top: 3.4rem;
    }
    
    .mobile-menu.is-open{
        opacity: 1;
        transform: translateY(0);
    }
    .mobile-menu a  {
        display: block;
        padding: 1rem;
        color: var(--textcolor);
        text-align: center;
        text-decoration: none;
        font-size: 1.55rem;
        text-transform: uppercase;
    }

    ul li{
        border-bottom: solid var(--light) 1px;
    }

    ul{
    list-style: none;
    background-color: var(--background);
    }
    .box{
        display: flex;
        flex-direction: row;
    }
    .box a.active{
        border-left: solid #F07662 4px;
    }




</style>

<script>
    const nav = document.querySelector(".mobile-menu");
    const navLinks = nav.querySelectorAll("a");
    const currentURL = window.location.href;
    navLinks.forEach((link) => {
      if (link.href === currentURL) {
        link.classList.add("active");
      }
    });
  </script>