<style>
	
	h1{
		color:var(--primary) ;
		margin-bottom: 2rem;
		font-size: 3rem;
		font-family: 'Taviraj', serif;
	}

	h2{
		font-weight: 400;
		margin-bottom: 2rem;
	}
	.white{
		background-color: var(--background);
		padding: 3rem 2rem ;
		text-align: center;
		color: #333333;
	}
	.container{
		width: 711.11px;
		height: 400px;
	}
	.container2{
		padding: 0rem 5rem ;
	}
	.container2 img{
		width: 85%;
	}
	
	.blue{
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 3rem 2rem ;
		background-color: var(--primary);
	}
	a{
		text-decoration: none;
		color: var(--backgroundfooter);
		font-weight: 500;
	}
	a:hover{
		color: var(--primary);		
	}
	@media (max-width: 1400px) {
		.container2 img{
		max-width: 70%;
	}
	.container2{
		padding: 0rem 1rem ;
	}
	}
	@media (max-width: 900px) {
		.container2 img{
		max-width: 50%;
	}
	.container2{
		padding: 0rem 0.25rem ;
	}
	}
	@media (max-width: 700px) {
		.container2 img{
		display: none;
	}
	}
</style>
<script defer src="/_vercel/insights/script.js"></script>